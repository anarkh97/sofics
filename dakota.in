#
#  Usage: dakota -input dakota.in -output dakota.log
#
#  DAKOTA INPUT FILE
#  Input file optimizes the shape of a steel containment
#  structure subjected to internal detonation of 250g TNT
#

environment
  	tabular_data
  	  tabular_data_file = 'dakota.dat'

method
	soga
	  seed = 1649919948
          max_iterations = 1
          max_function_evaluations = 2500
          initialization_type unique_random
          crossover_type shuffle_random
            num_offspring = 2 
            num_parents = 4
            crossover_rate 0.8
          mutation_type replace_uniform
            mutation_rate 0.25
          fitness_type merit_function
            constraint_penalty = 10000
          replacement_type elitist
          convergence_type best_fitness_tracker
            percent_change = 0.0 
            num_generations = 5
          population_size = 2
          print_each_pop

model
  	single

variables
        active design
	continuous_design = 2
          descriptor       'lx'    'ly'
          initial_point     280     180
	  lower_bounds      100     100
	  upper_bounds      300     200
        continuous_state  = 2
	  descriptor        't'    'dx'
	  initial_state      30      10

interface
	fork
          asynchronous
          evaluation_concurrency = 2 
          local_evaluation_scheduling = static
	  analysis_driver = 'driver.sh'
	  parameters_file = 'design_params.in'
	  results_file    = 'design_results.out'
	failure_capture
          recover 10000 10000
        file_tag
	file_save
	work_directory named 'design_eval'
	directory_tag 
        directory_save
	   
responses
	objective_functions = 1
        nonlinear_inequality_constraints = 1 
		nonlinear_inequality_upper_bounds	0.13
        descriptors = 'mass'  'max_plastic_strain'
	no_gradients
	no_hessians
